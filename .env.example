# Cultura App Environment Configuration
# Copy this file to .env.local and fill in your actual API keys

# Qloo API Configuration
# Get your API key from https://qloo.com/
VITE_QLOO_API_KEY=
VITE_QLOO_API_URL=https://api.qloo.com/v1

# Perplexity AI Configuration  
# Get your API key from https://www.perplexity.ai/
VITE_PERPLEXITY_API_KEY=
VITE_PERPLEXITY_API_URL=https://api.perplexity.ai

# Application Configuration
VITE_APP_NAME=Cultura
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_CHAT_INTERFACE=true

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_TIMEOUT=30000

# Cultural Data Sources
VITE_MOVIE_DATA_SOURCE=tmdb
VITE_MUSIC_DATA_SOURCE=spotify
VITE_FASHION_DATA_SOURCE=custom
VITE_FOOD_DATA_SOURCE=custom
VITE_TRAVEL_DATA_SOURCE=custom

# External Service APIs (Optional)
# VITE_TMDB_API_KEY=
# VITE_SPOTIFY_CLIENT_ID=
# VITE_SPOTIFY_CLIENT_SECRET=

# Security
VITE_ENABLE_CORS=true
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_ERROR_REPORTING=false